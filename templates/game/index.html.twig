{% extends 'base.html.twig' %}

{% block title %}Partie{% endblock %}

{% block body %}
    {# Elements de la partie #}
    Mode de jeu : 
    {% if gameMode == 'pokemonPairs'%}
            Paires de pokemon
    {% elseif gameMode == 'typePairs' %}
            Paires de types
    {% elseif gameMode == 'genPairs' %}
        Paires de générations
    {% endif %}<br>
    Montrer les cartes au départ : 
    {% if showCardsAtStart ends with 'Yes' %}
        Oui
    {% else %}
        Non
    {% endif %}<br>
    Timer : 
    {% if timer ends with 'Yes' %}
        Oui
    {% else %}
        Non
    {% endif %}<br>
    Nombre de pairs : {{pairsNumber}}<br>
    Nombre d'essais : {{triesNumber}}<br><br>

    {# Grille des pokemon #}
    <div id="pokemonBoxes">
        {% for i in 0..(dimensions.x - 1) %}
            {% for j in 0..(dimensions.y - 1) %}
                <div id="box{{pairsNumber}}" class="box" data-x="{{i}}" data-y="{{j}}"></div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
