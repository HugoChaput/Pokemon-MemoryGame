{% extends 'base.html.twig' %}

{% block title %}Partie{% endblock %}

{% block body %}
    {# Elements de la partie #}
    {#
    Mode de jeu : 
    {% if gameMode == 'pokemonPairs'%}
            Paires de pokemon
    {% elseif gameMode == 'typePairs' %}
            Paires de types
    {% elseif gameMode == 'genPairs' %}
        Paires de générations
    {% endif %}<br>
    Montrer les cartes au départ : 
    {% if showCardsAtStart ends with 'Yes' %}
        Oui
    {% else %}
        Non
    {% endif %}<br>
    Timer : 
    {% if timer ends with 'Yes' %}
        Oui
    {% else %}
        Non
    {% endif %}<br>
    Nombre de pairs : {{pairsNumber}}<br>
    Nombre d'essais : {{triesNumber}}<br><br>
    #}

    {# Met à disposition du javascript le nombre de colonnes de la grille #}
    <div class="gridColumns" data-columns-number="{{dimensions.y}}"></div>

    {# Grille des pokemon #}
    <div id="pokemonGrid">
        {% set k = 1 %}{# compteur pour l'id "box" des cases #}
        {% for i in 0..(dimensions.x - 1) %}
            {% for j in 0..(dimensions.y - 1) %}
                <div id="box{{k}}" class="box" data-x="{{i}}" data-y="{{j}}"></div>
                {% set k = k + 1 %}
            {% endfor %}
        {% endfor %}
    </div>

    <div id="finPartie"></div>
{% endblock %}
